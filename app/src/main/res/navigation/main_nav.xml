<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="pt.ipbeja.dialogsmenus.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dialogDemoFragment"
            app:destination="@id/dialogDemoFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="pt.ipbeja.dialogsmenus.MenuFragment"
        android:label="menu_fragment"
        tools:layout="@layout/menu_fragment" />
    <fragment
        android:id="@+id/dialogDemoFragment"
        android:name="pt.ipbeja.dialogsmenus.DialogDemoFragment"
        android:label="dialog_demo_fragment"
        tools:layout="@layout/dialog_demo_fragment" />
</navigation>